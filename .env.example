# ============================================
# TradingHub Pro - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in the values
# Never commit .env.local to version control!

# ===========================================
# Application Mode
# ===========================================

# Use mock data instead of real API (default: true in development)
VITE_USE_MOCK_DATA=true

# Enable developer tools and debugging
VITE_DEV_TOOLS=true

# Enable performance monitoring
VITE_PERF_MONITORING=false

# ===========================================
# Feature Flags
# ===========================================

# Enable AI-powered features
VITE_AI_ENABLED=true

# Enable real-time WebSocket updates
VITE_REALTIME_ENABLED=true

# ===========================================
# API Configuration
# ===========================================

# Binance API (for real market data)
# Get your API key at: https://www.binance.com/en/my/settings/api-management
VITE_BINANCE_API_KEY=
VITE_BINANCE_API_SECRET=

# WebSocket URLs
VITE_BINANCE_WS_URL=wss://stream.binance.com:9443/ws
VITE_BINANCE_REST_URL=https://api.binance.com/api/v3

# ===========================================
# Security
# ===========================================

# Content Security Policy nonce (auto-generated in production)
# VITE_CSP_NONCE=

# Allowed API origins (comma-separated)
VITE_ALLOWED_ORIGINS=https://api.binance.com,wss://stream.binance.com

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================

# Error tracking (Sentry)
VITE_SENTRY_DSN=

# Analytics
VITE_ANALYTICS_ID=

# ===========================================
# Build Configuration
# ===========================================

# Source map generation (disable in production for security)
VITE_GENERATE_SOURCEMAP=true

# Bundle analysis
VITE_BUNDLE_ANALYZE=false
